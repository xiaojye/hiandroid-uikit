<resources>

    <!--图片预览样式-->
    <style name="HIUIPreview" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="HIUIDialog" parent="android:Theme.Dialog">
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 在中间弹框、背后有遮罩的效果 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 自己想要的背景 -->
        <item name="android:windowBackground">@drawable/hiui_dialog_bg</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 解决：原先对话框里面按钮显示和点击时的兼容性问题 -->
        <item name="android:selectableItemBackground">@null</item>
    </style>

</resources>
